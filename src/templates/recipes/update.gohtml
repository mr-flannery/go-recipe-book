<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Recipe - {{.Recipe.Title}}</title>
    <link rel="stylesheet" href="/static/css/styles.css">
</head>
<body>
    {{ template "navbar" .UserInfo }}
    <div class="navigation">
        <a href="/recipes/{{.Recipe.ID}}" class="btn btn-secondary">← Back to Recipe</a>
        <a href="/recipes" class="btn btn-secondary">All Recipes</a>
    </div>

    <div class="container">
        <div class="header">
            <h1>Update Recipe</h1>
            <p>Make changes to your recipe</p>
        </div>

        <form method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{.Recipe.ID}}">
            
            <div class="form-group">
                <label for="title">Recipe Title *</label>
                <input type="text" id="title" name="title" value="{{.Recipe.Title}}" required placeholder="Enter a descriptive title for your recipe">
            </div>

            <div class="form-group">
                <label for="image">Recipe Image</label>
                <div class="current-image">
                    {{if .Recipe.ImageBase64}}
                        <img src="data:image/jpeg;base64,{{.Recipe.ImageBase64}}" alt="Current recipe image">
                        <div class="help-text">Current image (upload a new one to replace)</div>
                    {{else}}
                        <div class="no-image">No current image</div>
                    {{end}}
                </div>
                <input type="file" id="image" name="image" accept="image/*">
                <div class="help-text">Upload a new image to replace the current one (optional)</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="preptime">Prep Time (minutes)</label>
                    <input type="number" id="preptime" name="preptime" value="{{.Recipe.PrepTime}}" min="0" placeholder="15">
                </div>
                <div class="form-group">
                    <label for="cooktime">Cook Time (minutes)</label>
                    <input type="number" id="cooktime" name="cooktime" value="{{.Recipe.CookTime}}" min="0" placeholder="30">
                </div>
                <div class="form-group">
                    <label for="calories">Calories (per serving)</label>
                    <input type="number" id="calories" name="calories" value="{{.Recipe.Calories}}" min="0" placeholder="350">
                </div>
            </div>

            <div class="form-group">
                <label>Tags</label>
                <div class="tags-section">
                    <div id="tags-container" class="tags-container">
                        {{range .Recipe.Tags}}
                        <span class="tag tag-author" data-tag="{{.Name}}">
                            {{.Name}}<button type="button" class="tag-remove" onclick="removeTag('{{.Name}}')">&times;</button>
                        </span>
                        {{end}}
                        <div class="tag-input-container">
                            <input type="text" id="tag-input" class="tag-input" placeholder="Add tag...">
                            <div id="tag-suggestions" class="tag-suggestions"></div>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="tags-hidden" name="tags" value="{{range $i, $t := .Recipe.Tags}}{{if $i}},{{end}}{{$t.Name}}{{end}}">
                <div class="help-text">Add tags to help others find your recipe (e.g., vegetarian, quick, dessert)</div>
            </div>

            <div class="form-group">
                <label for="ingredients">Ingredients (Markdown) *</label>
                <textarea id="ingredients" name="ingredients" class="textarea-large" required placeholder="List your ingredients here. You can use Markdown formatting:

- 2 cups all-purpose flour
- 1 tsp baking powder
- 1/2 cup sugar
- **Optional:** 1 tsp vanilla extract">{{.Recipe.IngredientsMD}}</textarea>
                <div class="help-text">Use Markdown formatting for better presentation. Each ingredient on a new line.</div>
            </div>

            <div class="form-group">
                <label for="instructions">Instructions (Markdown) *</label>
                <textarea id="instructions" name="instructions" class="textarea-large" required placeholder="Provide step-by-step instructions. You can use Markdown formatting:

1. **Preheat** oven to 350°F (175°C)
2. In a large bowl, mix dry ingredients
3. Add wet ingredients and stir until combined
4. Bake for 25-30 minutes until golden brown

*Tip: Let cool for 5 minutes before serving*">{{.Recipe.InstructionsMD}}</textarea>
                <div class="help-text">Use numbered lists, bold text, and other Markdown formatting to make instructions clear.</div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">Update Recipe</button>
                <a href="/recipes/{{.Recipe.ID}}" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script>
        const tagInput = document.getElementById('tag-input');
        const tagSuggestions = document.getElementById('tag-suggestions');
        const tagsContainer = document.getElementById('tags-container');
        const tagsHidden = document.getElementById('tags-hidden');
        let selectedTags = tagsHidden.value ? tagsHidden.value.split(',').filter(t => t.trim()) : [];
        let selectedIndex = -1;
        let currentSuggestions = [];

        async function searchTags(query) {
            try {
                const response = await fetch(`/api/tags/search?q=${encodeURIComponent(query)}`);
                const data = await response.json();
                return data.tags || [];
            } catch (e) {
                return [];
            }
        }

        function updateHiddenField() {
            tagsHidden.value = selectedTags.join(',');
        }

        function renderTags() {
            const existingTags = tagsContainer.querySelectorAll('.tag');
            existingTags.forEach(tag => tag.remove());
            
            const inputContainer = tagsContainer.querySelector('.tag-input-container');
            selectedTags.forEach(tagName => {
                const tagEl = document.createElement('span');
                tagEl.className = 'tag tag-author';
                tagEl.setAttribute('data-tag', tagName);
                tagEl.innerHTML = `${tagName}<button type="button" class="tag-remove" onclick="removeTag('${tagName}')">&times;</button>`;
                tagsContainer.insertBefore(tagEl, inputContainer);
            });
        }

        function addTag(tagName) {
            tagName = tagName.toLowerCase().trim();
            if (!tagName || selectedTags.includes(tagName)) return;
            
            selectedTags.push(tagName);
            updateHiddenField();
            renderTags();
            tagInput.value = '';
            tagSuggestions.classList.remove('show');
        }

        window.removeTag = function(tagName) {
            selectedTags = selectedTags.filter(t => t !== tagName);
            updateHiddenField();
            renderTags();
        };

        function renderSuggestions(tags, query) {
            currentSuggestions = tags.filter(t => !selectedTags.includes(t));
            selectedIndex = -1;
            
            if (currentSuggestions.length === 0 && query.trim() === '') {
                tagSuggestions.classList.remove('show');
                return;
            }

            let html = '';
            currentSuggestions.forEach((tag, i) => {
                html += `<div class="tag-suggestion" data-index="${i}" data-tag="${tag}">${tag}</div>`;
            });

            const normalizedQuery = query.toLowerCase().trim();
            if (normalizedQuery !== '' && !currentSuggestions.includes(normalizedQuery) && !selectedTags.includes(normalizedQuery)) {
                html += `<div class="tag-suggestion tag-suggestion-new" data-index="${currentSuggestions.length}" data-tag="${normalizedQuery}">Create "${normalizedQuery}"</div>`;
                currentSuggestions.push(normalizedQuery);
            }

            if (html === '') {
                tagSuggestions.classList.remove('show');
                return;
            }

            tagSuggestions.innerHTML = html;
            tagSuggestions.classList.add('show');
        }

        tagInput.addEventListener('input', async function() {
            const query = this.value;
            const tags = await searchTags(query);
            renderSuggestions(tags, query);
        });

        tagInput.addEventListener('keydown', function(e) {
            const items = tagSuggestions.querySelectorAll('.tag-suggestion');
            
            if (e.key === 'ArrowDown') {
                e.preventDefault();
                selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                items.forEach((item, i) => item.classList.toggle('selected', i === selectedIndex));
            } else if (e.key === 'ArrowUp') {
                e.preventDefault();
                selectedIndex = Math.max(selectedIndex - 1, 0);
                items.forEach((item, i) => item.classList.toggle('selected', i === selectedIndex));
            } else if (e.key === 'Enter') {
                e.preventDefault();
                if (selectedIndex >= 0 && currentSuggestions[selectedIndex]) {
                    addTag(currentSuggestions[selectedIndex]);
                } else if (this.value.trim()) {
                    addTag(this.value.trim());
                }
            } else if (e.key === 'Escape') {
                tagSuggestions.classList.remove('show');
            }
        });

        tagSuggestions.addEventListener('click', function(e) {
            const item = e.target.closest('.tag-suggestion');
            if (item) {
                addTag(item.dataset.tag);
            }
        });

        document.addEventListener('click', function(e) {
            if (!tagInput.contains(e.target) && !tagSuggestions.contains(e.target)) {
                tagSuggestions.classList.remove('show');
            }
        });

        tagInput.addEventListener('focus', async function() {
            if (this.value.trim() === '') {
                const tags = await searchTags('');
                renderSuggestions(tags, '');
            }
        });
    </script>
    {{ template "footer" }}
</body>
</html>
