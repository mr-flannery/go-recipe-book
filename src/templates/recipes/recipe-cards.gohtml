{{if .Recipes}}
{{range .Recipes}}
<div class="recipe-card">
    <div class="recipe-image-container">
        {{if .ImageBase64}}
            <img src="data:image/jpeg;base64,{{.ImageBase64}}" alt="{{.Title}}" class="recipe-image">
        {{else}}
            <div class="no-image">No image</div>
        {{end}}
    </div>
    
    <div class="recipe-content">
        <div class="recipe-title">{{.Title}}</div>
        
        <div class="recipe-ingredients">{{.IngredientsMD}}</div>
        
        <div class="recipe-meta">
            {{if .PrepTime}}<span>â±ï¸ {{.PrepTime}}min prep</span>{{end}}
            {{if .CookTime}}<span>ğŸ”¥ {{.CookTime}}min cook</span>{{end}}
            {{if .Calories}}<span>ğŸ“Š {{.Calories}} cal</span>{{end}}
        </div>
        
        <div class="recipe-actions">
            <a href="/recipes/{{.ID}}" class="btn btn-primary">View Recipe</a>
            {{if and $.IsLoggedIn (eq $.CurrentUser.ID .AuthorID)}}
                <a href="/recipes/update?id={{.ID}}" class="btn btn-secondary">Edit</a>
                <button onclick="deleteRecipe({{.ID}})" class="btn btn-danger">Delete</button>
            {{end}}
        </div>
    </div>
</div>
{{end}}
{{else}}
<div style="text-align: center; margin: 50px 0; color: #666;">
    <h2>No recipes found</h2>
    <p>Try adjusting your filters or search terms.</p>
</div>
{{end}}
