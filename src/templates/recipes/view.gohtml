<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Recipe.Title}} - Recipe View</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script>
        function deleteRecipe(recipeId) {
            if (confirm('Are you sure you want to delete this recipe? This action cannot be undone.')) {
                fetch(`/recipes/${recipeId}/delete`, {
                    method: 'DELETE',
                    credentials: 'same-origin'
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/recipes';
                    } else {
                        response.text().then(text => {
                            alert('Failed to delete recipe: ' + text);
                        });
                    }
                })
                .catch(error => {
                    alert('Error deleting recipe: ' + error.message);
                });
            }
        }
    </script>
</head>
<body>
    {{ template "navbar" .UserInfo }}
    <div class="navigation">
        <a href="/recipes" class="btn btn-secondary">‚Üê Back to Recipes</a>
        {{if .IsAuthor}}
            <a href="/recipes/update?id={{.Recipe.ID}}" class="btn">Edit Recipe</a>
            <button onclick="deleteRecipe({{.Recipe.ID}})" class="btn btn-danger">Delete Recipe</button>
        {{end}}
    </div>

    <div class="recipe-header">
        <h1>{{.Recipe.Title}}</h1>
        
        {{if .Recipe.ImageBase64}}
            <div class="recipe-image-container">
                <img src="data:image/jpeg;base64,{{.Recipe.ImageBase64}}" alt="{{.Recipe.Title}}" class="recipe-image">
            </div>
        {{end}}

        <div class="recipe-meta">
            {{if .Recipe.PrepTime}}
            <div class="meta-item">
                <div class="meta-label">Prep Time</div>
                <div class="meta-value">{{.Recipe.PrepTime}} min</div>
            </div>
            {{end}}
            
            {{if .Recipe.CookTime}}
            <div class="meta-item">
                <div class="meta-label">Cook Time</div>
                <div class="meta-value">{{.Recipe.CookTime}} min</div>
            </div>
            {{end}}
            
            {{if .Recipe.Calories}}
            <div class="meta-item">
                <div class="meta-label">Calories</div>
                <div class="meta-value">{{.Recipe.Calories}}</div>
            </div>
            {{end}}
            
            <div class="meta-item">
                <div class="meta-label">Created</div>
                <div class="meta-value">{{.Recipe.CreatedAt.Format "Jan 2, 2006"}}</div>
            </div>
        </div>

        <!-- Author Tags Section -->
        <div class="tags-section">
            <div id="author-tags-container" class="tags-container">
                <span class="tags-label">Tags:</span>
                {{range .Recipe.Tags}}
                <span class="tag tag-author">
                    {{.Name}}
                    {{if $.IsAuthor}}
                    <button class="tag-remove" onclick="removeAuthorTag({{$.Recipe.ID}}, {{.ID}})" title="Remove tag">&times;</button>
                    {{end}}
                </span>
                {{end}}
                {{if .IsAuthor}}
                <div class="tag-input-container">
                    <input type="text" id="author-tag-input" class="tag-input" placeholder="Add tag...">
                    <div id="author-tag-suggestions" class="tag-suggestions"></div>
                </div>
                {{end}}
                {{if and (not .Recipe.Tags) (not .IsAuthor)}}
                <span style="color: #999; font-style: italic;">No tags</span>
                {{end}}
            </div>
        </div>

        <!-- User Tags Section (only for logged-in users) -->
        {{if .IsLoggedIn}}
        <div class="tags-section">
            <div id="user-tags-container" class="tags-container">
                <span class="tags-label">My Tags:</span>
                {{range .UserTags}}
                <span class="tag tag-user">
                    {{.Name}}
                    <button class="tag-remove" onclick="removeUserTag({{.ID}})" title="Remove tag">&times;</button>
                </span>
                {{end}}
                <div class="tag-input-container">
                    <input type="text" id="user-tag-input" class="tag-input" placeholder="Add personal tag...">
                    <div id="user-tag-suggestions" class="tag-suggestions"></div>
                </div>
            </div>
        </div>
        {{end}}
    </div>

    <div class="recipe-section">
        <h2>Ingredients</h2>
        <div class="ingredients">{{.Recipe.IngredientsMD}}</div>
    </div>

    <div class="recipe-section">
        <h2>Instructions</h2>
        <div class="instructions">{{.Recipe.InstructionsMD}}</div>
    </div>

    <div class="comments-section">
        <h2>Comments (<span id="comment-count">{{len .Comments}}</span>)</h2>

        <div id="comments-list">
            {{range .Comments}}
            <div class="comment">
                <div class="comment-header">
                    {{.Username}} - {{.CreatedAt.Format "Jan 2, 2006 at 3:04 PM"}}
                </div>
                <div class="comment-content">{{.ContentMD}}</div>
            </div>
            {{else}}
            <p id="no-comments">No comments yet. Be the first to comment!</p>
            {{end}}
        </div>

        {{if .IsLoggedIn}}
        <div class="comment-form">
            <h3>Add a Comment</h3>
            <form hx-post="/recipes/{{.Recipe.ID}}/comments/htmx" 
                  hx-target="#comments-list" 
                  hx-swap="afterbegin"
                  hx-on::after-request="this.reset(); document.getElementById('comment-count').textContent = parseInt(document.getElementById('comment-count').textContent) + 1; const noComments = document.getElementById('no-comments'); if (noComments) noComments.style.display = 'none';">
                <textarea name="comment" placeholder="Share your thoughts about this recipe..." required></textarea>
                <br>
                <button type="submit" class="btn">Post Comment</button>
            </form>
        </div>
        {{else}}
        <p><a href="/login">Login</a> to add a comment.</p>
        {{end}}
    </div>

    {{ template "tag-input-script" }}
    {{ template "tag-remove-script" }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            {{if .IsAuthor}}
            TagInputWidget.init({
                inputId: 'author-tag-input',
                suggestionsId: 'author-tag-suggestions',
                containerId: 'author-tags-container',
                searchUrl: '/api/tags/search',
                addUrl: '/recipes/{{.Recipe.ID}}/tags',
                initialTags: [],
                tagClass: 'tag-author',
                mode: 'ajax'
            });
            {{end}}
            {{if .IsLoggedIn}}
            TagInputWidget.init({
                inputId: 'user-tag-input',
                suggestionsId: 'user-tag-suggestions',
                containerId: 'user-tags-container',
                searchUrl: '/api/tags/user/search',
                addUrl: '/recipes/{{.Recipe.ID}}/user-tags',
                initialTags: [],
                tagClass: 'tag-user',
                mode: 'ajax'
            });
            {{end}}
        });
    </script>
    {{ template "footer" .UserInfo }}
</body>
</html>
