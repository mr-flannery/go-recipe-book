<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Recipe.Title}} - Recipe View</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <link rel="stylesheet" href="/static/css/styles.css">
    <script>
        function deleteRecipe(recipeId) {
            if (confirm('Are you sure you want to delete this recipe? This action cannot be undone.')) {
                fetch(`/recipes/${recipeId}/delete`, {
                    method: 'DELETE',
                    credentials: 'same-origin'
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/recipes';
                    } else {
                        response.text().then(text => {
                            alert('Failed to delete recipe: ' + text);
                        });
                    }
                })
                .catch(error => {
                    alert('Error deleting recipe: ' + error.message);
                });
            }
        }

        function initTagInput(inputId, suggestionsId, searchUrl, addUrl, containerId, tagClass, isAuthor) {
            const input = document.getElementById(inputId);
            const suggestions = document.getElementById(suggestionsId);
            const container = document.getElementById(containerId);
            let selectedIndex = -1;
            let currentSuggestions = [];

            async function searchTags(query) {
                try {
                    const response = await fetch(`${searchUrl}?q=${encodeURIComponent(query)}`);
                    const data = await response.json();
                    return data.tags || [];
                } catch (e) {
                    return [];
                }
            }

            function renderSuggestions(tags, query) {
                currentSuggestions = tags;
                selectedIndex = -1;
                
                if (tags.length === 0 && query.trim() === '') {
                    suggestions.classList.remove('show');
                    return;
                }

                let html = '';
                tags.forEach((tag, i) => {
                    html += `<div class="tag-suggestion" data-index="${i}" data-tag="${tag}">${tag}</div>`;
                });

                if (query.trim() !== '' && !tags.includes(query.toLowerCase().trim())) {
                    html += `<div class="tag-suggestion tag-suggestion-new" data-index="${tags.length}" data-tag="${query.trim()}">Create "${query.trim()}"</div>`;
                    currentSuggestions.push(query.trim());
                }

                if (html === '') {
                    suggestions.classList.remove('show');
                    return;
                }

                suggestions.innerHTML = html;
                suggestions.classList.add('show');
            }

            async function addTag(tagName) {
                if (!tagName.trim()) return;

                const formData = new FormData();
                formData.append('tag', tagName.trim());

                try {
                    const response = await fetch(addUrl, {
                        method: 'POST',
                        body: formData
                    });
                    const data = await response.json();
                    
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.error || 'Failed to add tag');
                    }
                } catch (e) {
                    alert('Error adding tag');
                }
            }

            input.addEventListener('input', async function() {
                const query = this.value;
                const tags = await searchTags(query);
                renderSuggestions(tags, query);
            });

            input.addEventListener('keydown', function(e) {
                const items = suggestions.querySelectorAll('.tag-suggestion');
                
                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                    items.forEach((item, i) => item.classList.toggle('selected', i === selectedIndex));
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    selectedIndex = Math.max(selectedIndex - 1, 0);
                    items.forEach((item, i) => item.classList.toggle('selected', i === selectedIndex));
                } else if (e.key === 'Enter') {
                    e.preventDefault();
                    if (selectedIndex >= 0 && currentSuggestions[selectedIndex]) {
                        addTag(currentSuggestions[selectedIndex]);
                    } else if (this.value.trim()) {
                        addTag(this.value.trim());
                    }
                } else if (e.key === 'Escape') {
                    suggestions.classList.remove('show');
                }
            });

            suggestions.addEventListener('click', function(e) {
                const item = e.target.closest('.tag-suggestion');
                if (item) {
                    addTag(item.dataset.tag);
                }
            });

            document.addEventListener('click', function(e) {
                if (!input.contains(e.target) && !suggestions.contains(e.target)) {
                    suggestions.classList.remove('show');
                }
            });

            input.addEventListener('focus', async function() {
                if (this.value.trim() === '') {
                    const tags = await searchTags('');
                    renderSuggestions(tags, '');
                }
            });
        }

        async function removeTag(recipeId, tagId) {
            try {
                const response = await fetch(`/recipes/${recipeId}/tags/${tagId}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.error || 'Failed to remove tag');
                }
            } catch (e) {
                alert('Error removing tag');
            }
        }

        async function removeUserTag(tagId) {
            try {
                const response = await fetch(`/user-tags/${tagId}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                if (data.success) {
                    location.reload();
                } else {
                    alert(data.error || 'Failed to remove tag');
                }
            } catch (e) {
                alert('Error removing tag');
            }
        }
    </script>
</head>
<body>
    {{ template "navbar" .UserInfo }}
    <div class="navigation">
        <a href="/recipes" class="btn btn-secondary">← Back to Recipes</a>
        {{if .IsAuthor}}
            <a href="/recipes/update?id={{.Recipe.ID}}" class="btn">Edit Recipe</a>
            <button onclick="deleteRecipe({{.Recipe.ID}})" class="btn btn-danger">Delete Recipe</button>
        {{end}}
    </div>

    <div class="recipe-header">
        <h1>{{.Recipe.Title}}</h1>
        
        {{if .Recipe.ImageBase64}}
            <div class="recipe-image-container">
                <img src="data:image/jpeg;base64,{{.Recipe.ImageBase64}}" alt="{{.Recipe.Title}}" class="recipe-image">
            </div>
        {{end}}

        <div class="recipe-meta">
            {{if .Recipe.PrepTime}}
            <div class="meta-item">
                <div class="meta-label">Prep Time</div>
                <div class="meta-value">{{.Recipe.PrepTime}} min</div>
            </div>
            {{end}}
            
            {{if .Recipe.CookTime}}
            <div class="meta-item">
                <div class="meta-label">Cook Time</div>
                <div class="meta-value">{{.Recipe.CookTime}} min</div>
            </div>
            {{end}}
            
            {{if .Recipe.Calories}}
            <div class="meta-item">
                <div class="meta-label">Calories</div>
                <div class="meta-value">{{.Recipe.Calories}}</div>
            </div>
            {{end}}
            
            <div class="meta-item">
                <div class="meta-label">Created</div>
                <div class="meta-value">{{.Recipe.CreatedAt.Format "Jan 2, 2006"}}</div>
            </div>
        </div>

        <!-- Author Tags Section -->
        <div class="tags-section">
            <div class="tags-container">
                <span class="tags-label">Tags:</span>
                {{range .Recipe.Tags}}
                <span class="tag tag-author">
                    {{.Name}}
                    {{if $.IsAuthor}}
                    <button class="tag-remove" onclick="removeTag({{$.Recipe.ID}}, {{.ID}})" title="Remove tag">&times;</button>
                    {{end}}
                </span>
                {{end}}
                {{if .IsAuthor}}
                <div class="tag-input-container">
                    <input type="text" id="author-tag-input" class="tag-input" placeholder="Add tag...">
                    <div id="author-tag-suggestions" class="tag-suggestions"></div>
                </div>
                {{end}}
                {{if and (not .Recipe.Tags) (not .IsAuthor)}}
                <span style="color: #999; font-style: italic;">No tags</span>
                {{end}}
            </div>
        </div>

        <!-- User Tags Section (only for logged-in users) -->
        {{if .IsLoggedIn}}
        <div class="tags-section">
            <div class="tags-container">
                <span class="tags-label">My Tags:</span>
                {{range .UserTags}}
                <span class="tag tag-user">
                    {{.Name}}
                    <button class="tag-remove" onclick="removeUserTag({{.ID}})" title="Remove tag">&times;</button>
                </span>
                {{end}}
                <div class="tag-input-container">
                    <input type="text" id="user-tag-input" class="tag-input" placeholder="Add personal tag...">
                    <div id="user-tag-suggestions" class="tag-suggestions"></div>
                </div>
            </div>
        </div>
        {{end}}
    </div>

    <div class="recipe-section">
        <h2>Ingredients</h2>
        <div class="ingredients">{{.Recipe.IngredientsMD}}</div>
    </div>

    <div class="recipe-section">
        <h2>Instructions</h2>
        <div class="instructions">{{.Recipe.InstructionsMD}}</div>
    </div>

    <div class="comments-section">
        <h2>Comments (<span id="comment-count">{{len .Comments}}</span>)</h2>

        <div id="comments-list">
            {{range .Comments}}
            <div class="comment">
                <div class="comment-header">
                    {{.Username}} • {{.CreatedAt.Format "Jan 2, 2006 at 3:04 PM"}}
                </div>
                <div class="comment-content">{{.ContentMD}}</div>
            </div>
            {{else}}
            <p id="no-comments">No comments yet. Be the first to comment!</p>
            {{end}}
        </div>

        {{if .IsLoggedIn}}
        <div class="comment-form">
            <h3>Add a Comment</h3>
            <form hx-post="/recipes/{{.Recipe.ID}}/comments/htmx" 
                  hx-target="#comments-list" 
                  hx-swap="afterbegin"
                  hx-on::after-request="this.reset(); document.getElementById('comment-count').textContent = parseInt(document.getElementById('comment-count').textContent) + 1; const noComments = document.getElementById('no-comments'); if (noComments) noComments.style.display = 'none';">
                <textarea name="comment" placeholder="Share your thoughts about this recipe..." required></textarea>
                <br>
                <button type="submit" class="btn">Post Comment</button>
            </form>
        </div>
        {{else}}
        <p><a href="/login">Login</a> to add a comment.</p>
        {{end}}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            {{if .IsAuthor}}
            initTagInput('author-tag-input', 'author-tag-suggestions', '/api/tags/search', '/recipes/{{.Recipe.ID}}/tags', 'author-tags-container', 'tag-author', true);
            {{end}}
            {{if .IsLoggedIn}}
            initTagInput('user-tag-input', 'user-tag-suggestions', '/api/tags/user/search', '/recipes/{{.Recipe.ID}}/user-tags', 'user-tags-container', 'tag-user', false);
            {{end}}
        });
    </script>
    {{ template "footer" .UserInfo }}
</body>
</html>
