{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}"
    },
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/src/main.go",
      "cwd": "${workspaceFolder}/src",
      "env": {
        "DB_HOST": "localhost",
        "DB_PORT": "5432",
        "DB_USER": "recipeuser",
        "DB_PASSWORD": "recipepass",
        "DB_NAME": "recipebook",
        "PORT": "8080"
      },
      "args": []
    },
    {
      "name": "Debug with Air (Attach)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
      "preLaunchTask": "air-debug"
    }
  ]
}
